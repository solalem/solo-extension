{
	"name": "solo",
	"displayName": "Solo Modeling",
	"description": "Solo Modeling",
	"version": "0.0.1",
	"publisher": "solalem",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.71.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:featureDesigns",
		"onView:codeTree",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:testView.reveal"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
			  "view": "codeTree",
			  "contents": "You can create a new.\n[Create New](command:solo.new)\n OR \n If you set up solo account, you can get it. \n [Get](command:git.get)\nTo learn more about how to use solo in VS Code [read our docs](https://solo.org/vscode).",
			  "when": "!solo.configured"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "solo-explorer",
					"title": "Solo Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"solo-explorer": [
				{
					"id": "codeTree",
					"name": "Code Tree View"
				},
				{
					"id": "featureDesigns",
					"name": "Feature Designs",
					"icon": "media/dep.svg",
					"contextualTitle": "Feature Designs"
				}
			]
		},
		"commands": [
			{
				"command": "featureDesigns.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "featureDesigns.previewCode",
				"title": "Preview Code",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "featureDesigns.addDesign",
				"title": "Add Design"
			},
			{
				"command": "featureDesigns.deleteDesign",
				"title": "Delete Design",
				"icon": {
					"light": "resources/light/error.svg",
					"dark": "resources/dark/error.svg"
				}
			},
			{
				"command": "featureDesigns.duplicateItem",
				"title": "Duplicate Item",
				"icon": {
					"light": "resources/light/dependency.svg",
					"dark": "resources/dark/dependency.svg"
				}
			},
			{
				"command": "featureDesigns.changeTitle",
				"title": "Change Title"
			},
			{
				"command": "solo.new",
				"title": "New Solution"
			},
			{
				"command": "solo.clone",
				"title": "Clone Solution"
			},
			{
				"command": "codeTree.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "codeTree.previewFile",
				"title": "Preview File",
				"icon": {
					"light": "resources/light/document.svg",
					"dark": "resources/dark/document.svg"
				}
			},
			{
				"command": "codeTree.generateFile",
				"title": "Generate File",
				"icon": {
					"light": "resources/light/document.svg",
					"dark": "resources/dark/document.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "codeTree.previewFile"
				}
			],
			"view/title": [
				{
					"command": "featureDesigns.refresh",
					"when": "view == featureDesigns",
					"group": "navigation"
				},
				{
					"command": "featureDesigns.addDesign",
					"when": "view == featureDesigns"
				},
				{
					"command": "codeTree.refresh",
					"when": "view == codeTree",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "featureDesigns.deleteDesign",
					"when": "view == featureDesigns && viewItem == design",
					"group": "inline"
				},
				{
					"command": "featureDesigns.duplicateItem",
					"when": "view == featureDesigns && viewItem == item",
					"group": "inline"
				},
				{
					"command": "codeTree.generateFile",
					"when": "view == codeTree && viewItem == file",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "Code Tree View",
				"properties": {
					"solo.templateDirectory": {
						"type": "string",
						"default": "%userprofile%/Documents/templates"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/ftp": "^0.3.33",
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^16.11.7",
		"@types/pluralize": "0.0.29",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2",
		"handlebars": "^4.7.7",
		"pluralize": "^8.0.0"
	}
}
